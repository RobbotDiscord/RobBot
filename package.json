{
  "name": "robbot",
  "private": true,
  "version": "2.0.0",
  "description": "RobBot, a microservice based full stack discord bot utilizing technologies like Redis, MongoDB and RabbitMQ",
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobbotDiscord/RobBot.git"
  },
  "author": "robigan",
  "license": "GPLv3",
  "workspaces": [
    "instances/*",
    "packages/*",
    "utils/*"
  ],
  "devDependencies": {
    "turbo": "^1.0.23"
  },
  "bugs": {
    "url": "https://github.com/RobbotDiscord/RobBot/issues"
  },
  "homepage": "https://github.com/RobbotDiscord/RobBot#readme",
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": ["dist/**"]
      },
      "test": {
        "dependsOn": [
          "build"
        ],
        "outputs": []
      },
      "lint": {
        "outputs": []
      }
    }
  }
}
